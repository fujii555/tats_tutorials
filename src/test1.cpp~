#include "ros/ros.h"
#include "sensor_msgs/LaserScan.h"
#include "stdio.h"
#include "geometry_msgs/Twist.h"
#include <iostream>
#include <sstream>
int i;
double w,r,a;
void chatterCallback(const sensor_msgs::LaserScan::ConstPtr& msg)
{
  for(i=440;i<640;i++){
 　　 std::cout<< msg->ranges[i] <<std::endl;
 　　w = msg->ranges[i];
  　 if(w < 1){
  　　 break;
  　}
   }
}
  int main(int argc, char **argv)
{
  ros::init(argc, argv, "pas");
  ros::NodeHandle n;
  ros::Subscriber sub = n.subscribe("scan", 1000, chatterCallback);
  ros::Publisher pub = n.advertise<geometry_msgs::Twist>("mobile_base/commands/velocity",1000);
  geometry_msgs::Twist msg;
  while(ros::ok()){
        if(w<1){
	  // r=0.2;
	  //	  while(r>=0.0){
	  //	    msg.linear.x=r;
	  //	    pub.publish(msg);
	  //	    r=r-0.1;
	  //	    sleep(0.5);
	  //	  }
	  msg.linear.x=0.0;
	  pub.publish(msg);
	  sleep(1);
	  msg.angular.z=0.5;
	  pub.publish(msg);
	}
	else{
	  //	  r=0.4;
	  //	  while(r>=0.0){
	  //	    msg.angular.z=r;
	  //	    pub.publish(msg);
	  //	    r=r-0.1;
	  //	    sleep(0.5);
	  //	  }
	  msg.angular.z=0.0;
	  pub.publish(msg);
	  sleep(1);
	  msg.linear.x=0.3;
	  pub.publish(msg);
	}
    sleep(0.8);
    ros::spinOnce();
  }
  return 0;
}


